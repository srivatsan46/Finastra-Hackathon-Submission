@model FinastraWeb.Models.DocModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style=" padding-top: 15%;">
    @using (Html.BeginForm())
    {
        <div class="container">
            <div class="row centered-form">
                <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Document List</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form">
                                <table class="table table-bordered" style=" padding-top: 1%;">
                                    <thead>
                                        <tr>                                            
                                            <th>Document Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @Model.UserDocList)
                                        {
                                        <tr>                                            
                                            <td>@item.Document</td>
                                            <td><a data-value="@item.Id" onclick="encodeURIComponent(location.href='@item.MobileNo')" class="btnEdit">Download</a></td>                                            
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

